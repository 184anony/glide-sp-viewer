{
    "manifest_version": 2,
    "name": "Glide SP Viewer",
    "version": "1.0",
    "description": "Change user agent, viewport size, and window size for specific sites.",
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "<all_urls>",
        "tabs",
        "windows"
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "content_scripts": [
        {
            "matches": ["*://*.glide.page/*"],
            "js": ["content.js"],
            "run_at": "document_start"
        }
    ]
}
